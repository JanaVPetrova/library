%head
  = stylesheet_link_tag    "bootstrap_and_overrides", media: "all"
  = stylesheet_link_tag    "application"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body
  .navbar-wrapper
    .navbar.navbar-inverse
      .navbar-inner
        %button.btn.btn-navbar
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.brand{ href: "http://ulmic.ru" }
          .logo-mic
        %a.brand{ href: root_path }
          Library
        .nav-collapse.collapse
          %ul.nav
            %li
              %a{ href: books_path }
                = t('all_books')
            %li
            - if signed_in?
              %li= link_to t('account'), account_root_path
              %li= link_to t('sign_out'), session_path, method: :delete

            - else
              %li
                %a{ href: new_session_path }
                  Войти
              %li
                %a{ href: new_user_path }
                  Регистрация
  .container
    = yield
