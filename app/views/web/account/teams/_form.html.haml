= simple_form_for @team, url: url, html: { class: 'form-horizontal' } do |f|
  - f.with_options input_html: { class: 'span5' } do |f|
    = f.input :title
    = f.input :description
    = f.input :image
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t('cancel', default: t("helpers.links.cancel")), account_books_path, class: 'btn'
